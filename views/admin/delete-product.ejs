<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/products.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <div class="product-form" >
            
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (deleteing) { %><%= product.title %><% } %>" disabled>
            </div>
            <div class="form-control">
                <label for="imageUrl">Image Url</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (deleteing) { %><%= product.imageUrl %><% } %>" disabled>
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if (deleteing) { %><%= product.price %><% } %>" disabled>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" disabled><% if (deleteing) { %><%= product.description %><% } %></textarea>
                </textarea>
            </div>
            
            <input type="hidden" name="deleteId" value="<%= product._id %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <button class="btn" type="button" 
            onclick="deleteProduct(this)">Delete</button>
        </div>
    </main>
<%- include('../includes/end.ejs') %>
<script src='/js/admin.js'></script> %>