<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/products.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <form class="product-form" action="/admin/delete-product" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<% if (deleteing) { %><%= product.title %><% } %>" disabled>
            </div>
            <div class="form-control">
                <label for="imageUrl">Image Url</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (deleteing) { %><%= product.imageUrl %><% } %>" disabled>
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<% if (deleteing) { %><%= product.price %><% } %>" disabled>
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" disabled><% if (deleteing) { %><%= product.description %><% } %></textarea>
                </textarea>
            </div>
            
            <input type="hidden" name="deleteId" value="<%= product._id %>">
            
            <button type="submit">Delete</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>